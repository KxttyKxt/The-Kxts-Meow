<ruleset version="2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://codeberg.org/PORTB/BiggerStacksConfigLib/raw/branch/master/extra/schema.xsd">
	<!-- Enchanted Books & Misc -->
	<rule stacksize="16">
		<or>
			<condition>id = minecraft:enchanted_book</condition>
			<condition>id = quark:ancient_tome</condition>

			<condition>id = irons_spellbooks:scroll</condition>

			<condition>tag includes minecraft:music_discs</condition>
			<condition>id = minecraft:saddle</condition>
		</or>
	</rule>

	<!-- Potions -->
	<rule stacksize="3">
		<or>
			<condition>id = minecraft:potion</condition>
			<condition>id = minecraft:splash_potion</condition>
			<condition>id = minecraft:lingering_potion</condition>

			<condition>id = enigmaticlegacy:common_potion</condition>
			<condition>id = enigmaticlegacy:common_potion_splash</condition>
			<condition>id = enigmaticlegacy:common_potion_lingering</condition>

			<condition>id = enigmaticlegacy:ultimate_potion</condition>
			<condition>id = enigmaticlegacy:ultimate_potion_splash</condition>
			<condition>id = enigmaticlegacy:ultimate_potion_lingering</condition>

			<condition>id = enigmaticlegacy:twisted_potion</condition>
			<condition>id = enigmaticlegacy:antiforbidden_potion</condition>
			<condition>id = enigmaticlegacy:recall_potion</condition>
		</or>
	</rule>

	<!-- Soups, Stews, and other foods-->
	<rule stacksize="16">
		<or>
			<condition>id = incubation:scrambled_eggs</condition>
			<condition>id = neapolitan:adzuki_stew</condition>
		</or>
	</rule>
</ruleset>